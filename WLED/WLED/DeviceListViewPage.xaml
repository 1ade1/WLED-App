<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:wled="clr-namespace:WLED"
             x:Class="WLED.DeviceListViewPage"
             BackgroundColor="#222"
             >
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="LabelStyle" TargetType="Label">
                <Setter Property="TextColor" Value="White" />
                <Setter Property="HorizontalOptions" Value="CenterAndExpand" />
                <Setter Property="VerticalOptions" Value="CenterAndExpand" />
            </Style>
            <Style x:Key="PowerButtonImageStylePower" TargetType="Image">
                <Setter Property="Source" Value="icon_power.png" />
            </Style>
            <Style x:Key="PowerButtonImageStyleDelete" TargetType="Image">
                <Setter Property="Source" Value="icon_delete.png" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <StackLayout>
        <wled:MenuBar x:Name="topMenuBar"/>

        <Label x:Name="welcomeLabel"
               Text="Welcome!"
               Font="Bold, 25"
               Style="{StaticResource LabelStyle}" />

        <Label x:Name="instructionLabel"
               Font="18"
               Text="Please use the &quot;+&quot; button to add your WLED lights!"
               HorizontalTextAlignment="Center"
               Style="{StaticResource LabelStyle}" />

        <ListView x:Name="DeviceListView"
                ItemsSource="{Binding DeviceList}"
                ItemTapped="On_Item_Tapped"
                IsPullToRefreshEnabled="True"
                Refreshing="On_Refresh"
                HasUnevenRows="True"
                CachingStrategy="RecycleElement">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding ="6" IsVisible="{Binding IsShown}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="35" />
                                <RowDefinition Height="25" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="65" />
                            </Grid.ColumnDefinitions>
                            <Label Text="{Binding Name}" 
                                   Font="Bold, 25" TextColor="white"
                                   Grid.Row="0" Grid.Column="0" />
                            <Label Text="{Binding Status}" 
                                   Font="18" TextColor="white"
                                   Grid.Row="1" Grid.Column="0" />
                            <Button Clicked="On_PowerButton_Tapped" 
                                    BorderRadius="50" BackgroundColor="#222" BorderColor="White" BorderWidth="4"
                                    Grid.Row="0" Grid.Column="1" Grid.RowSpan="2">
                            </Button>

                            <Image Style="{DynamicResource PowerButtonImageStyle}" Scale ="0.8" Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" InputTransparent="True"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>
    </StackLayout>
</ContentPage>
