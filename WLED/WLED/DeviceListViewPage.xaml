    <ContentPage.ToolbarItems>
        <ToolbarItem Name="MenuItemAdd" Order="Primary" Icon="Microsoft.png" Text="Add" Priority="0" Activated="Handle_MenuItem_Activated" />
        <ToolbarItem Name="MenuItemMore" Order="Primary" Icon="Xamarin.png" Text="More" Priority="1" Activated="Handle_MenuItem_Activated" />
    </ContentPage.ToolbarItems>
    
    <ListView x:Name="DeviceListView"
            ItemsSource="{Binding Items}"
            ItemTapped="Handle_ItemTapped"
            CachingStrategy="RecycleElement">
            
    
    <ListView.ItemTemplate>
      <DataTemplate>
        <ViewCell>
          <StackLayout>
            <Label Text="{Binding Name}" 
                   Style="{DynamicResource ListItemTextStyle}" />
            <Label Text="{Binding NetworkAddress}" 
                   Style="{DynamicResource ListItemDetailTextStyle}"/>
          </StackLayout>
        </ViewCell>
      </DataTemplate>
    </ListView.ItemTemplate>
    
  </ListView>
